<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('paymentmethods')]" position="replace">
            <div class="paymentmethods">
                <t t-foreach="get_payment_methods()" t-as="paymentMethod" t-key="paymentMethod.id">
                    <!-- <PaymentMethodButton paymentMethod="paymentMethod" /> -->

                    <div class="button paymentmethod" t-on-click="() => this.trigger('new-payment-line', paymentMethod)">
                        <div class="payment-name">
                            <t t-esc="paymentMethod.name" />
                        </div>
                    </div>
                </t>
            </div>
        </xpath>
    </t>
</templates> 