<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="access_management_form_view_ah" model="ir.ui.view">
            <field name="name">access_management_form_view_ah</field>
            <field name="groups_id" eval="[(4, ref('group_access_management_spt'))]"/>
            <field name="model">access.management</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <widget name="web_ribbon" title="Deactivated" bg_color="bg-danger" attrs="{'invisible': [('active','=',True)]}"/>
                            <field name="active" invisible="1"/>
                            <button attrs="{'invisible':[('active','=',False)]}" class="oe_stat_button"
								name ="toggle_active_value"
								type ="object"
								icon ="fa-stop">
                                <div class="o_stat_info o_form_field">
                                    <span style="font-weight: bold;" class="text-danger">Deactivate Rule</span>
                                </div>
                            </button>
                            <button attrs="{'invisible':[('active','=',True)]}" class="oe_stat_button"
								name ="toggle_active_value"
								type ="object"
								icon ="fa-play">
                                <div class="o_stat_info o_form_field">
                                    <span style="font-weight: bold;" class="text-success">Activate Rule</span>
                                </div>
                            </button>
                            <button name="action_show_rules" type="object" class="oe_stat_button" icon="fa-list-ul">
                                <div class="o_stat_info">
                                    <field name="total_rules" class="o_stat_value"/>
                                    <span class="o_stat_text"> Access Rules</span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" default_focus="1" required='1'/>
                                <field name="readonly" />
                                <field name="company_ids" options="{'no_create': True}" widget="many2many_tags" groups="base.group_multi_company" />
                                <field name="self_model_ids" widget="many2many_tags" invisible="1" />
                                <field name="total_rules" invisible="1" />
                            </group>
                            <group>
                                <field name="user_ids" widget='many2many_tags' options="{'no_create': True}" domain="[('share','=',False)]"/>
                                <field name="disable_debug_mode" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="create_uid" />
                                <field name="write_uid" />
                            </group>
                            <group>
                                <field name="create_date" />
                                <field name="write_date" />
                            </group>
                        </group>
                        <notebook>
                            <page string='Hide Menu'>
                                <field name="self_module_menu_ids" widget="many2many_tags" invisible="1" />
                                <field name='hide_menu_ids' domain="[('id','not in',self_module_menu_ids)]" />
                                <p role="alert" class="fa fa-info-circle  alert alert-info alert-dismissible rounded-0 fade show d-print-none css_editable_mode_hidden" style="font-size: 15px;letter-spacing: 1px;"> The menu or submenu added on above list will be hidden from the defined user(s).<br/><br/>  More Info : <a href="https://www.terabits.xyz/simplify_access_management#bt-pills-menu" target="_blank" alt="Menu Access Right">https://www.terabits.xyz/simplify_access_management#bt-pills-menu</a></p>
                            </page>
                            <page string='Model Access'>
                                <field name='remove_action_ids'>
                                    <tree editable='bottom' >
                                        <field name="model_id" context="{'is_access_rights': True}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" width='13' required='1' domain="[('id','not in',parent.self_model_ids)]" />
                                        <field name="report_action_ids" width='13' widget="many2many_tags" options="{'no_create': True}"/>
                                        <field name="server_action_ids" width='13' widget="many2many_tags" options="{'no_create': True}"/>
                                        <field name="view_data_ids" width='8' widget="many2many_tags" options="{'no_create': True}"/>
                                        <field name="restrict_create" width='10'/>
                                        <field name="restrict_edit" width='10'/>
                                        <field name="restrict_delete" width='10'/>
                                        <field name="restrict_archive_unarchive" width='10'/>
                                        <field name="restrict_duplicate" width='10'/>
<!--                                        <field name="restrict_chatter" width='10' attrs="{'column_invisible' : [('parent.hide_chatter','=',True)]}"/>-->
                                        <field name="readonly" invisible="1" attrs="{'column_invisible' : [('parent.readonly','=',True)]}"/>
                                        <field name="restrict_import" width='10'/>
                                        <field name="restrict_export" width='10' />
                                    </tree>
                                </field>
                                <p role="alert" class="fa fa-info-circle  alert alert-info alert-dismissible rounded-0 fade show d-print-none css_editable_mode_hidden" style="font-size: 15px;letter-spacing: 1px;">
                                    You can Hide reports, Hide action buttons like Create, Edit, Export, Hide Views (list, kanban, report, etc), Also hide some actions like Archive, Delete, Duplicate, etc from defined user(s).
                                    <br/><br/>Note: the restriction added here will only become hidden for defined users. They can still be accessed by python code or API, so it won't intruppet the process in some cases like from POS and API. If you strictly want to block the Create, Edit, Delete process entirely from the user, you can use the 'Domain Access' Tab of the form and deine the rule there.
                                    <br/><br/>  More Info : <a href="https://www.terabits.xyz/simplify_access_management#bt-pills-model" target="_blank" alt="Menu Access Right">ttps://www.terabits.xyz/simplify_access_management#bt-pills-model</a>
                                </p>
                            </page>
                            <page string='Field Access'>
                                <field name='hide_field_ids'>
                                    <tree editable='bottom'>
                                        <!-- <field name="model_id" options="{'no_create': True}" domain="[('id','not in',parent.self_model_ids),('abstract','=',False)]" /> -->
                                        <field name="model_id" context="{'is_access_rights': True}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" required='1' domain="[('id','not in',parent.self_model_ids)]"/>
                                        <field name="field_id" context="{'is_access_rights': True}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" widget='many2many_tags' domain="[('model_id','=',model_id)]"/>
                                        <field name="invisible" width='1'/>
                                        <field name="readonly" width='1' attrs="{'column_invisible' : [('parent.readonly','=',True)]}"/>
                                        <field name="required" width='1'/>
                                        <field name="external_link" width='1'/>
                                    </tree>
                                </field>
                                <p role="alert" class="fa fa-info-circle  alert alert-info alert-dismissible rounded-0 fade show d-print-none css_editable_mode_hidden" style="font-size: 15px;letter-spacing: 1px;">
                                    You can Hide any field of any model, Turn any field to Read-Only or Set any field as Required for the specified user(s) from here.
                                    <br/><br/>  More Info : <a href="https://www.terabits.xyz/simplify_access_management#bt-pills-fields" target="_blank" alt="Menu Access Right">https://www.terabits.xyz/simplify_access_management#bt-pills-fields</a>
                                </p>
                            </page>
                            <page string='Domain Access'>
                                <field name='access_domain_ah_ids'>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="model_id" context="{'is_access_rights': True}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" domain="[('id','not in',parent.self_model_ids),('abstract','=',False)]" />
                                                </group>
                                            </group>
                                            <group>
                                                <group>
                                                    <field name="read_right" />
                                                    <field name="create_right" />
                                                </group>
                                                <group>
                                                    <field name="write_right" string="Update" />
                                                    <field name="delete_right" />
                                                </group>
                                            </group>
                                            <group>
                                                <field name="apply_domain" attrs="{'invisible' : [('read_right','=',False)]}" />
                                                <field name="model_name" invisible="1" attrs="{'invisible' : ['|',('apply_domain','!=',True),('read_right','=',False)]}" />
                                                <field name="domain" widget="terabits_domain" options="{'model': 'model_name'}" attrs="{'invisible' : ['|',('apply_domain','!=',True),('read_right','=',False)]}" />
                                            </group>

                                        </sheet>
                                    </form>
                                    <tree>
                                        <field name="model_id" />
                                        <field name="domain" />
                                        <field name="read_right" />
                                        <field name="create_right" />
                                        <field name="write_right" />
                                        <field name="delete_right" />
                                    </tree>
                                </field>
                                <p role="alert" class="fa fa-info-circle  alert alert-info alert-dismissible rounded-0 fade show d-print-none css_editable_mode_hidden" style="font-size: 15px;letter-spacing: 1px;">
                                    You can set strict access rights of the model(read, write, delete, update) and set the domain to access the model's records for any user and from one place. The access defined here will either allow or block the entire access from the specified user(s), not only from the system, but also from the code and API. So be careful while defining the accesses here. If you just want to hide the Create, Edit and Delete buttons from the backend user for sales order but want to allow them to use POS, then defining access here will genereate the error on POS side. To prevent that, you can use the 'Model Access' tab to Hide the Create, Edit and Delete buttons.
                                    <br/><br/>You can allow the Read (View), Write (Create), Delete, Update (Edit) rights by just checking the check-boxes of respective actions, and to restrict them of those rights, don't check any of those checkboxes. And also this tab gives you advance configurator to allow those rights for your user on specific conditions, to set that condition check 'Apply Filter' checkbox.
                                    <br/><br/>More Info : <a href="https://www.terabits.xyz/simplify_access_management#bt-pills-domain" target="_blank" alt="Menu Access Right">https://www.terabits.xyz/simplify_access_management#bt-pills-domain</a>
                                </p>
                            </page>
                            <page string='Button/Tab Access'>
                                <field name='hide_view_nodes_ids'>
                                    <tree editable="bottom">
                                        <field name="model_id" context="{'is_access_rights': True}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" domain="[('id','not in',parent.self_model_ids)]" />
                                        <field name="model_name" invisible="1" />
                                        <field name="btn_store_model_nodes_ids" widget="many2many_tags" domain="[('model_id','=',model_id),('node_option','=','button')]" options="{'no_create': True}" />
                                        <field name="page_store_model_nodes_ids" widget="many2many_tags" domain="[('model_id','=',model_id),('node_option','=','page')]" options="{'no_create': True}" />
                                        <field name="link_store_model_nodes_ids" widget="many2many_tags" domain="[('model_id','=',model_id),('node_option','=','link')]" options="{'no_create': True}" />
                                    </tree>
                                </field>
                                <p role="alert" class="fa fa-info-circle  alert alert-info alert-dismissible rounded-0 fade show d-print-none css_editable_mode_hidden" style="font-size: 15px;letter-spacing: 1px;">
                                    You can hide access of action buttons, object buttons, tabs and links (in kanban box) of any model for specified user from this tab.
                                    <br/><br/>Here Button means any action button visible on any view.
                                    <br/><br/>Page means any tab visible on any form view.
                                    <br/><br/>And Link means any action link visible on Kanban view.
                                    <br/><br/>More Info : <a href="https://www.terabits.xyz/simplify_access_management#bt-pills-buttontab" target="_blank" alt="Menu Access Right">https://www.terabits.xyz/simplify_access_management#bt-pills-buttontab</a>
                                </p>
                            </page>
                            <page string='Hide Filter/Group By'>
                                <field name="hide_filters_groups_ids">
                                    <tree editable="bottom">
                                        <field name="model_id" context="{'is_access_rights': True}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" domain="[('id','not in',parent.self_model_ids)]" />
                                        <field name="model_name" invisible="1" />
                                        <field name="filters_store_model_nodes_ids" widget="many2many_tags" domain="[('model_id','=',model_id),('node_option','=','filter')]" options="{'no_create': True}" />
                                        <field name="groups_store_model_nodes_ids" widget="many2many_tags" domain="[('model_id','=',model_id),('node_option','=','group')]" options="{'no_create': True}" />
                                    </tree>
                                </field>
                                <p role="alert" class="fa fa-info-circle  alert alert-info alert-dismissible rounded-0 fade show d-print-none css_editable_mode_hidden" style="font-size: 15px;letter-spacing: 1px;">
                                    You can hide access of Filters and Group By of any model for specified user from this tab.
                                    <br/><br/>Here Filters means any Filters visible on List/Tree view.
                                    <br/><br/>Group By means any Group By visible on List/Tree view.
<!--                                    <br/><br/>More Info : <a href="https://www.terabits.xyz/simplify_access_management#bt-pills-buttontab" target="_blank" alt="Menu Access Right">https://www.terabits.xyz/simplify_access_management#bt-pills-buttontab</a>-->
                                </p>
                            </page>
                            <page string='Chatter'>
                                <field name="hide_chatter_ids">
                                    <tree editable="bottom">
                                        <field name="model_id" context="{'is_access_rights': True}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" width="20" domain="[('id','not in',parent.self_model_ids)]" required="1"/>
                                        <field name="hide_chatter" width="20"/>
                                        <field name="hide_send_mail" width="20"/>
                                        <field name="hide_log_notes" width="20"/>
                                        <field name="hide_schedule_activity" width="20"/>
                                    </tree>
                                </field>
                                <p role="alert" class="fa fa-info-circle  alert alert-info alert-dismissible rounded-0 fade show d-print-none css_editable_mode_hidden" style="font-size: 15px;letter-spacing: 1px;">
                                    You can hide Chatter and Buttons of Chatter for any model for specified user from this tab.
                                    <br/><br/>Here Button of Chatter means 'Send message', 'Log note', 'Activities'.
                                </p>
                            </page>
                            <page string='Global'>
                                <group>
                                    <group string="Chatter">
                                        <field name="hide_chatter"/>
                                        <field name="hide_send_mail"/>
                                        <field name="hide_log_notes"/>
                                        <field name="hide_schedule_activity"/>
                                    </group>
                                    <group string="Import &amp; Export">
                                        <field name="hide_import"/>
                                        <field name="hide_export"/>
                                    </group>
                                    <group string="Others">
                                        <field name="disable_login" />

                                    </group>
                                </group>
                                <p role="alert" class="fa fa-info-circle  alert alert-info alert-dismissible rounded-0 fade show d-print-none css_editable_mode_hidden" style="font-size: 15px;letter-spacing: 1px;">
                                    In this tab you can apply the rule for every model.
                                    <br/><br/>You can hide chatter, send message, log notes, schedule activities, import, export from everywhere with single chabox
                                    <br/><br/>selection for specific user.
                                </p>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="access_management_search_view" model="ir.ui.view">
            <field name="name">access.management.search.view</field>
            <field name="model">access.management</field>
            <field name="arch" type="xml">
                <search string="Access Management">
                    <field name="name" string="Name"/>
                    <field name="user_ids"/>
                    <field name="active"/>
                    <field name="create_uid" />
                    <separator/>
                    <filter string="All" name="all" domain="['|', ('active', '=', False), ('active', '=', True)]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Created By" name="created_by" domain="[]" context="{'group_by': 'create_uid'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="access_management_tree_view_ah" model="ir.ui.view">
            <field name="name">access_management_tree_view_ah</field>
            <field name="groups_id" eval="[(4, ref('group_access_management_spt'))]"/>
            <field name="model">access.management</field>
            <field name="arch" type="xml">
                <tree decoration-muted="(not active)">
                    <field name="name"/>
                    <field name="create_uid" />
                    <field name="create_date" />
                    <field name="user_ids" widget="many2many_tags" />
                    <field name="total_rules" />
                    <field name="active" invisible="0" widget="boolean_toggle" />
                </tree>
            </field>
        </record>

        <record id="action_access_management_ah" model="ir.actions.act_window">
            <field name="name">Access Management</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">access.management</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_all': 1}</field>
        </record>

        <menuitem id="main_menu_simplify_access_management" name="Access Studio" action="action_access_management_ah" groups="group_access_management_spt" web_icon="simplify_access_management,static/description/icon.png" />

    </data>
</odoo>
