<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Scrap move report view form -->
    <record id="scrap_move_report_view_form" model="ir.ui.view">
        <field name="name">scrap.move.report.view.form</field>
        <field name="model">scrap.move.report</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <field name="location_id"/>
                        <field name="product_id"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_pdf" string="PDF" type="object"
                            default_focus="1" class="oe_highlight"/>
                    <button name="action_print_xlsx" string="XLSX" type="object"
                            default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- Scrap move report action -->
    <record id="scrap_move_report_action" model="ir.actions.act_window">
        <field name="name">Scrap Report</field>
        <field name="res_model">scrap.move.report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <!-- Scrap move report showing menu -->
    <menuitem id="scrap_move_report_menu" name="Scrap Report"
              parent="stock.menu_warehouse_report"
              action="scrap_move_report_action"/>
</odoo>
