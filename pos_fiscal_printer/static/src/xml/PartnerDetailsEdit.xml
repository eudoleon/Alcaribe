<?xml version="1.0" encoding="UTF-8"?>
<templates id="partner_screen" xml:space="preserve">
    <t t-name="PartnerDetailsEdit" t-inherit="point_of_sale.PartnerDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//input[@name='vat']/.." position="before">
            <div class="partner-detail">
                <span class="label">Tipo de Cliente</span>
                <select class="detail" name="company_type" t-on-change="captureChange">
                    <option value="person" t-att-selected="props.partner.company_type == 'person'" >Individual</option>
                    <option value="company" t-att-selected="props.partner.company_type == 'company'">Compañía</option>
                </select>
            </div>
        </xpath>
        <xpath expr="//input[@name='vat']/../span" position="replace">
                <span class="label">CE/RIF</span>
        </xpath>
        <xpath expr="//input[@name='vat']" position="attributes">
            <attribute name="placeholder">Ej.: 123456478/J-01234567-8</attribute>
        </xpath>
        <xpath expr="//input[@name='vat']/.." position="after">
            <div class='partner-detail'>
                <span class='label'>Municipali.</span>
  <select name="city_id" class="detail form-select" t-model="changes.city_id" t-on-change="captureChange">
                    <option t-foreach="env.pos.city_id" t-as="city" t-if="changes.state_id == city.state_id[0] and changes.country_id == city.country_id[0]" t-key="city.id" t-att-value="city.id" t-out="city.name" />
                </select>
            </div>
        </xpath>
    </t>
</templates>