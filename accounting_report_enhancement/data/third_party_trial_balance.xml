<odoo>
    <record id="trial_balance_report_aya" model="account.report">
        <field name="name">AYA - General Balance</field>
        <field name="filter_journals" eval="True"/>
        <field name="filter_analytic" eval="True"/>
        <field name="filter_growth_comparison" eval="False"/>
        <field name="filter_multi_company">selector</field>
        <field name="filter_unfold_all" eval="True"/>
        <field name="filter_hierarchy">by_default</field>
        <field name="default_opening_date_filter">this_month</field>
        <field name="search_bar" eval="True"/>
        <field name="custom_handler_model_id" ref="model_account_aya_trial_balance_report_handler"/>
        <field name="column_ids">
            <record id="aya_trial_balance_report_balance" model="account.report.column">
                <field name="name">Balance</field>
                <field name="expression_label">balance</field>
                <field name="figure_type">monetary</field>
            </record>
            <record id="aya_trial_balance_report_debit" model="account.report.column">
                <field name="name">Debit</field>
                <field name="expression_label">debit</field>
                <field name="figure_type">monetary</field>
            </record>
            <record id="aya_trial_balance_report_credit" model="account.report.column">
                <field name="name">Credit</field>
                <field name="expression_label">credit</field>
                <field name="figure_type">monetary</field>
            </record>
        </field>
    </record>

    <record id="action_account_report_coa_b" model="ir.actions.client">
        <field name="name">AYA - General Balance</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'report_id': ref('accounting_report_enhancement.trial_balance_report_aya')}"/>
    </record>

    <menuitem id="menu_action_account_report_b"
              name="AYA - General Balance"
              action="action_account_report_coa_b"
              parent="account_reports.account_reports_audit_reports_menu"
              groups="account.group_account_readonly"/>

    <record id="trial_balance_report_tp" model="account.report">
        <field name="name">Balance by Third Party</field>
        <field name="filter_journals" eval="True"/>
        <field name="filter_analytic" eval="True"/>
        <field name="filter_growth_comparison" eval="False"/>
        <field name="filter_multi_company">selector</field>
        <field name="filter_unfold_all" eval="True"/>
        <field name="filter_hierarchy">by_default</field>
        <field name="default_opening_date_filter">this_month</field>
        <field name="search_bar" eval="True"/>
        <field name="custom_handler_model_id" ref="model_account_tp_trial_balance_report_handler"/>
        <field name="line_ids">
            <record id="trial_balance_report_tp_line" model="account.report.line">
                <field name="name">ACCESORIOS Y ACABADOS S.A.S.</field>
            </record>
            <record id="trial_balance_report_tp_line_1" model="account.report.line">
                <field name="name">NIT: 860536345-7.</field>
            </record>
            <record id="trial_balance_report_tp_line_2" model="account.report.line">
                <field name="name">Elaborado Bajo Normas Internacionales de Informacion Financiera.</field>
            </record>
        </field>
        <field name="column_ids">
            <record id="trial_balance_report_tp_nit" model="account.report.column">
                <field name="name">TERCERO</field>
                <field name="expression_label">partner_nit</field>
                <field name="figure_type">none</field>
            </record>
            <record id="trial_balance_report_tp_balance" model="account.report.column">
                <field name="name">Balance</field>
                <field name="expression_label">balance</field>
                <field name="figure_type">monetary</field>
            </record>
            <record id="trial_balance_report_tp_debit" model="account.report.column">
                <field name="name">Debit</field>
                <field name="expression_label">debit</field>
                <field name="figure_type">monetary</field>
            </record>
            <record id="trial_balance_report_tp_credit" model="account.report.column">
                <field name="name">Credit</field>
                <field name="expression_label">credit</field>
                <field name="figure_type">monetary</field>
            </record>
        </field>
    </record>


    <record id="action_account_report_coa_tp" model="ir.actions.client">
        <field name="name">Balance by Third Party</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'report_id': ref('accounting_report_enhancement.trial_balance_report_tp')}"/>
    </record>

    <menuitem id="menu_action_account_report_tp"
              name="Balance by Third Party"
              action="action_account_report_coa_tp"
              parent="account_reports.account_reports_audit_reports_menu"
              groups="account.group_account_readonly"/>

</odoo>