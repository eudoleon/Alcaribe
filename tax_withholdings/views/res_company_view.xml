<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_company_view_form">
        <field name="name">res.company.view.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[1]" position="after">
                <page string="Firma para retenciones">  
                    <label for="withholding_signature" string="Firma: "/>
                    <field name="withholding_signature" widget="image" options='{"size": [100, 100]}'/>
                    <label for="withholding_signature" string="Sello: "/>
                    <field name="withholding_sello" widget="image" options='{"size": [100, 100]}'/> 
                </page>
            </xpath>
        </field>
    </record>

</odoo>