<odoo>

    <!-- caja de datos y confirmación-->

    <record id="view_print_nc" model="ir.ui.view">
        <field name="name">Nota de Crédito</field>
        <field name="model">invoice.print.notacredito</field>
        <field name="arch" type="xml">

            <form id="dlg_print_nota_credito" js_class="inv_printer_nota_credito" string="Nota de Crédito">
               
                <field name="printer_host" invisible="1" />

                <sheet modifiers="{}">
                    <h2 modifiers="{}">
                        Datos de Factura
                    </h2>

                    <div class="row">
                        <div class="col-12">
                            <group>
                                <field name="numFactura" required="1" readonly="0"/>
                                <field name="fechaFactura" required="1" readonly="0" />
                                <field name="serialImpresora" required="1" readonly="0"/>
                            </group>
                        </div>

                    </div>

                </sheet>
                <footer>
                    <button string="Imprimir" special="save" class="btn-primary"></button>                    
                    <button string="Cancelar" class="btn-secondary" special='cancel'></button>
                </footer>
            </form>

        </field>
    </record>

</odoo>