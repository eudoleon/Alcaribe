<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="account_invoice_report_cxc_report_wizard" model="ir.ui.view">
            <field name="name">account.invoice.report.cxc</field>
            <field name="model">account.invoice.report.cxc</field>
            <field name="arch" type="xml">
                <form string="Reporte de cuentas por cobrar">
                    <field name="state" invisible="1"/>
                    <div states="get">
                         <group>
                            <field name="invoice_data" colspan="4" invisible="1"/>
                            <field name="file_name" filename="invoice_data" colspan="4"/>
                        </group>
                    </div>
                    <div states="choose">
                        <group>
                                <group>
                                    <field name="start_date" />
                                </group>
                                <group>
                                    <field name="end_date"/>
                                </group>
                        </group>
                    </div>
                    <footer states="choose">
                        <button string="Generate Report"
                            class="btn-primary"
                            name="action_invoices_report"
                            type="object"/>
                        <button string="Cancel"
                            class="btn-default"
                            special="cancel" />
                    </footer>
                    <footer states="get">
                        <button special="cancel" string="Cancel" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        
        <record id="action_report_cxc_xls" model="ir.actions.act_window">
            <field name="name">Reporte Cuentas Por Cobrar</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.invoice.report.cxc</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_invoice_report_cxc_report_wizard"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

        <menuitem 
            name = "Cuentas por Cobrar"
            action="action_report_cxc_xls" 
            id="menu_action_report_cxc_xls"
            parent="dual_fiance_menu_categ"
            sequence="75"/>

    </data>
</odoo>