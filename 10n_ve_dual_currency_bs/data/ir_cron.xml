<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data >
        <!-- Cron para actualizar la tasa y los precio de producto por ahora tasa BCV -->
        <record id="ir_cron_die_res_currency" model="ir.cron">
            <field name="name">Actualizar Tasa BCV</field>
            <field name="model_id" ref="model_res_currency"/>
            <field name="state">code</field>
            <field name="code">model.action_get_tax_BCV()</field>
            <field name="interval_number">2</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>