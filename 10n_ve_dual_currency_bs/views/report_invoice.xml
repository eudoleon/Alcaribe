<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dual_account_currency_report_invoice_document" inherit_id="account.report_invoice_document">

        <xpath expr="//div[@id='informations']" position="replace">
            <div id="informations">
              <!-- <div t-if="o.l10n_ve_document_number">
                <strong>Nro: <span t-field="o.l10n_ve_document_number"/></strong>
              </div>
              <br/> -->
              Sr(s): <span t-field="o.partner_id.name"/><br/>
              Domicilio:
              <span t-field="o.partner_id.street"/>,
              <span t-field="o.partner_id.city"/>,
              <span t-field="o.partner_id.zip"/>,
              <span t-field="o.partner_id.state_id.name"/><br/>
              Identificación: <span t-field="o.partner_id.l10n_latam_identification_type_id.l10n_ve_code"/>-<span t-field="o.partner_id.vat"/><br/>
              <!-- compatibility with other module -->
              <t t-set="address">
                <address invisible="1"/>
              </t>
            </div>
            <br/><br/>
            <div name="reference">
            </div>

        </xpath>


       <div class="clearfix mb-4" position="after">
            <t t-if="o.display_tax_currency">
                <br/> 
                <p style="font-size: 11px;">
                    Se Aplicó la Tasa de Cambio Oficial del Banco Central de Venezuela (BCV) de  
                    <span>Bs. <strong><span t-esc="o.tax_day"/></strong></span>
                    por cada USD$, 
                    de Conformidad con la Providencia del SENIAT SNAT/2011/00071 Artículo 13 numeral 14.
                    <b> PARA EFECTOS DEL PAGO DEBE UTILIZARSE LA TASA VIGENTE AL DIA DE PAGO</b>
                </p>
  
            </t>
        </div>

        <xpath expr="//div[@id='total']" position="replace">
            <div id="total" class="row">
                <div class="col-4">
                    
                </div>
                <div class="col-4" t-if = "o.type_report_currency == 'bs' or o.type_report_currency == 'usd'" />

                <div t-if = "o.type_report_currency == 'bs' or o.type_report_currency == 'usd_bs'" class="col-4">
                    <table class="table table-sm table-borderless" style="page-break-inside: avoid; width: 80%;">
                        <t t-call="10n_ve_dual_currency_bs.document_tax_totals_bs"/>
                    </table>
                </div>

                <div class="col-4 " t-if = "o.type_report_currency == 'usd' or o.type_report_currency == 'usd_bs'">
                    <table class="table table-sm table-borderless" style="page-break-inside: avoid;">

                        <!--Tax totals-->
                        <t t-set="tax_totals" t-value="o.tax_totals"/>
                        <t t-call="account.document_tax_totals"/>

                        <!--Payments-->
                        <t t-if="print_with_payments">
                            <t t-if="o.payment_state != 'invoicing_legacy'">
                                <t t-set="payments_vals" t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                                <t t-foreach="payments_vals" t-as="payment_vals">
                                    <tr t-if="payment_vals['is_exchange'] == 0">
                                        <td>
                                            <i class="oe_form_field text-end oe_payment_label">Pagado en <t t-esc="payment_vals['date']" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></i>
                                        </td>
                                        <td class="text-end">
                                            <span t-esc="payment_vals['amount']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="len(payments_vals) &gt; 0">
                                    <tr class="border-black">
                                        <td><strong>Monto adeudado</strong></td>
                                        <td class="text-end">
                                            <span t-field="o.amount_residual"/>
                                        </td>
                                    </tr>
                                    </t>
                                </t>
                            </t>
                        </table>
                </div>
                
            </div>
        </xpath>
    </template>

    <template id="document_tax_totals_bs">
        <tr class="border-black o_subtotal">
            <td><strong>Subtotal</strong></td>
            <td class="text-end">
                <span t-att-class="oe_subtotal_footer_separator" t-esc="o.amount_untaxed_bs" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_ref_id}"/>
            </td>
        </tr>
        <tr>
            <td>Impuestos</td>
            
            <td class="text-end o_price_total">
                <span class="text-nowrap" t-esc="o.amount_tax_bs" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_ref_id}"/>
            </td>
   
        </tr>
        <tr class="border-black o_total">
            <td><strong>Total</strong></td>
            <td class="text-end">
                <span class="text-nowrap" t-esc="o.amount_total_bs" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_ref_id}"/>
            </td>
        </tr>
    </template>

</odoo>
